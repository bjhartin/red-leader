#! /usr/local/bin/ruby

require 'rubygems'
require 'progressbar'

time_in_minutes = ARGV[0].to_i
reminder = ARGV[1]

def put(str)
  print str
  $stdout.flush
end

pbar = ProgressBar.new("Remaining", time_in_minutes)

time_in_minutes.times {sleep(60); pbar.inc}; pbar.finish

puts reminder
`terminal-notifier -message "reminder" -title "Red Leader"`


put "Minutes overtime:   |"

while true do
  sleep 60 
  put "o"
end
